{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "zero-to-app": ["../../package"],
      "zero-to-app/*": ["../../package/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../package/**/*.ts",
    "../../package/**/*.tsx"
  ]
}
