{
  "name": "zero-to-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "package",
    "apps/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "dev": "pnpm --filter zero-to-app-storybook storybook",
    "dev:storybook": "pnpm dev",
    "dev:storybook:web": "pnpm --filter zero-to-app-storybook storybook:web",
    "demo": "pnpm --filter zero-to-app-showcase start",
    "demo:ios": "pnpm --filter zero-to-app-showcase ios",
    "demo:android": "pnpm --filter zero-to-app-showcase android",
    "demo:web": "pnpm --filter zero-to-app-showcase web",
    "storybook": "pnpm dev:storybook",
    "storybook:web": "pnpm dev:storybook:web",
    "storybook:build": "pnpm --filter zero-to-app-storybook build-storybook",
    "build": "pnpm --filter zero-to-app run build",
    "release": "pnpm run build && pnpm --filter zero-to-app publish --access public --no-git-checks",
    "lint": "pnpm --filter zero-to-app-showcase lint",
    "lint:fix": "pnpm --filter zero-to-app-showcase lint -- --fix"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "react-docgen-typescript": "2.2.2"
    }
  }
}
