{
  "name": "zero-to-app",
  "version": "2.0.0",
  "description": "30+ reusable React Native components for iOS, Android, and Web",
  "license": "MIT",
  "author": "Alex Amayo",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alex-Amayo/zero-to-app.git"
  },
  "homepage": "https://zero-to-app.expo.app",
  "keywords": [
    "react-native",
    "expo",
    "ui-components",
    "design-system",
    "cross-platform",
    "ios",
    "android",
    "web",
    "theming",
    "components"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./brand": {
      "types": "./dist/brand/index.d.ts",
      "default": "./dist/brand/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "default": "./dist/theme/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "default": "./dist/hooks/index.js"
    },
    "./context": {
      "types": "./dist/context/scrollContext.d.ts",
      "default": "./dist/context/scrollContext.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "default": "./dist/components/*/index.js"
    },
    "./components/*/*": {
      "types": "./dist/components/*/*.d.ts",
      "default": "./dist/components/*/*.js"
    },
    "./ui": {
      "types": "./dist/components/ui/index.d.ts",
      "default": "./dist/components/ui/index.js"
    },
    "./ui/*": {
      "types": "./dist/components/ui/*.d.ts",
      "default": "./dist/components/ui/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.build.json"
  },
  "peerDependencies": {
    "@expo/vector-icons": "*",
    "expo-blur": "*",
    "expo-glass-effect": "*",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "@expo/vector-icons": {
      "optional": true
    },
    "expo-blur": {
      "optional": true
    },
    "expo-glass-effect": {
      "optional": true
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.0.0",
    "@material/material-color-utilities": "^0.4.0",
    "@shopify/flash-list": "^1.7.0",
    "lottie-react-native": "^6.7.0",
    "react-hook-form": "^7.0.0",
    "react-native-reanimated-carousel": "^3.5.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "@types/react-native": "^0.73.0",
    "typescript": "~5.9.2"
  }
}
